{% extends 'base.njk' %}

{% block css %}
  <style>
    .months-years {
      text-align: center;
      padding: 10px 0;
    }

    .calendar {
      height: 100%;
      width: 100%;
      border-spacing: 0;
      border-collapse: separate;
    }

    .week-numbers th {
      padding-bottom: 10px;
    }

    .day-row td {
      border-top: 1px solid #000000;
    }

    .day {
      position: relative;
      padding: 10px;
    }

    .day.left .date {
      position: absolute;
      top: 10px;
      left: 10px;
    }

    .day.right .date {
      position: absolute;
      top: 10px;
      right: 10px;
    }

    .weekday-cell {
      width: 20px;
      text-align: center;
    }

    .weekday {
      width: 1px;
      word-wrap: break-word;
    }

    .page-number {
      height: 40px;
    }
  </style>
{% endblock %}

{% block body %}
  <table class="calendar">
    <thead>
      <tr>
        <th colspan="3" class="months-years">
          September 2020
        </th>
      </tr>
      <tr class="week-numbers">
        <th class="align-left">23</th>
        <th></th>
        <th class="align-right">24</th>
      </tr>
    </thead>
    <tbody>
      {% include "day.njk" %}
      {% include "day.njk" %}
      {% include "day.njk" %}
      {% include "day.njk" %}
      {% include "day.njk" %}
      {% include "day.njk" %}
      {% include "day.njk" %}
      <tr>
        <td colspan="3" class="page-number">
          20
        </td>
      </tr>
    </tbody>
  </table>
{% endblock %}
