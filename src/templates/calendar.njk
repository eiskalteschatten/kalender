{% extends 'base.njk' %}

{% block css %}
  <style>
    .months-years {
      text-align: center;
      padding: 10px 0;
    }

    .calendar {
      height: 100%;
      width: 100%;
      border-spacing: 0;
      border-collapse: separate;
    }

    .week-numbers th {
      padding: 0 10px 10px 10px;
    }

    .day-row td {
      border-top: 1px solid #000000;
    }

    .day {
      position: relative;
      padding: 10px;
    }

    .day.left .date {
      position: absolute;
      top: 10px;
      left: 10px;
    }

    .day.right .date {
      position: absolute;
      top: 10px;
      right: 10px;
    }

    .weekday-cell {
      width: 20px;
      text-align: center;
    }

    .weekday {
      text-transform: uppercase;
      width: 1px;
      word-wrap: break-word;
    }

    .page-number {
      position: absolute;
      bottom: 10px;
      left: 10px;
    }
  </style>
{% endblock %}

{% block body %}
  <table class="calendar">
    <thead>
      <tr>
        <th colspan="3" class="months-years">
          {% for month in monthsYears.months %}
            {% if loop.index0 > 0 %}
              &mdash;
            {% endif %}

            {{ month }} {{ monthsYears.years[loop.index0] }}
          {% endfor %}
        </th>
      </tr>
      <tr class="week-numbers">
        <th class="align-left">{{ leftWeek.weekNumber }}</th>
        <th></th>
        <th class="align-right">{{ rightWeek.weekNumber }}</th>
      </tr>
    </thead>
    <tbody>
      {% for i in range(0, 7) %}
        {% include "day.njk" %}
      {% endfor %}
    </tbody>
  </table>

  <div class="page-number">
    {{ pageNumber }}
  </div>
{% endblock %}
